<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dmv2.dealmedanv2final.view.fragment.DealItemFragment">

    <TextView
        android:id="@+id/txt_not_found"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/cardview_shadow_start_color"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="Not Found" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/di_asc_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="40dp">

    </android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:id="@+id/layout_button_filter"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:background="@color/dark_background"
        android:gravity="top"
        android:padding="2dp">

        <Button
            android:id="@+id/button_filter"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:background="@color/dark_background"
            android:drawableLeft="@drawable/ic_tune_black"
            android:text="FILTER"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

    </RelativeLayout>

</FrameLayout>